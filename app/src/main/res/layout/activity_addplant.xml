<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:gravity="center_vertical"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:title="@string/add_a_plant" />

        </android.support.design.widget.AppBarLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_plant"
            android:contentDescription="@string/photo_of_the_plant" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingTop="24dp">

            <com.spacebitlabs.plantly.addplant.FormLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">

                <com.spacebitlabs.plantly.addplant.ExpandableInputView
                    android:id="@+id/type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shadow_thin"
                    app:label="Type"
                    app:value="Sansevieria Trifasciata" />

                <com.spacebitlabs.plantly.addplant.ExpandableInputView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shadow_thin"
                    app:label="Name"
                    app:value="Sansa" />

                <com.spacebitlabs.plantly.addplant.ExpandableInputView
                    android:id="@+id/water_freq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shadow_thin"
                    app:label="Water Frequency"
                    app:value="7 days" />

                <com.spacebitlabs.plantly.addplant.ExpandableInputView
                    android:id="@+id/soil_freq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shadow_thick"
                    app:label="Soil Frequency"
                    app:value="1 month" />

            </com.spacebitlabs.plantly.addplant.FormLayout>

        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#00C853"
        android:transitionName="fab"
        app:borderWidth="0dp"
        app:elevation="16dp"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_check" />

</FrameLayout>